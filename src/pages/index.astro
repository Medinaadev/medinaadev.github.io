---
import LinkButton from "../components/ui/LinkButton.astro";
import Image from "../components/ui/Image.astro";
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import RocketIcon from "../components/icons/Rocket.astro";
import NextjsIcon from "../components/icons/Nextjs.astro";
import TailwindIcon from "../components/icons/Tailwind.astro";
import Proyect from "../components/Proyect.astro";
---

<Layout title="Welcome to Astro.">
  <main class="px-4">
    <section
      class="flex max-sm:flex-col sm:items-center mx-auto w-full md:w-[700px] py-40"
    >
      <Image
        src="/mdnlogo.png"
        alt="Medina Logo"
        className="w-20 rounded-full shadow-xl"
        isBlurred
      />

      <div class="max-sm:mt-4 sm:ml-8 z-20">
        <h1 class="text-4xl font-bold">
          Hola!, soy <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-[#37ccfa] to-[#2eadb7]"
            >medina</span
          >
        </h1>
        <h2
          class="text-gray-400 text-xl font-medium lg:max-w-md text-balance mt-1"
        >
          <span class="text-gray-200">+2 años de experiencia.</span>
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-400 to-orange-300"
            >Desarrollador Web Full Stack</span
          >. De Málaga, España.
        </h2>
        <div class="flex gap-x-4 mt-6">
          <LinkButton
            href="https://github.com/Medinaadev"
            target="_blank"
            className="flex items-center"
          >
            <GithubIcon class="w-4 h-4" />
            Github
          </LinkButton>

          <LinkButton
            href="mailto:contacto.medinadev@gmail.com"
            target="_blank"
            className="flex items-center truncate"
          >
            <MailIcon class="min-w-4 h-4" />
            contacto.medinadev@gmail.com
          </LinkButton>
        </div>
      </div>
    </section>

    <section
      id="proyectos"
      class="flex flex-col md:mx-auto w-full md:w-[700px] py-40"
    >
      <h2 class="flex items-center text-3xl font-semibold text-gray-300">
        <RocketIcon class="w-5 h-5 mr-3" />
        Proyectos
      </h2>
      <Proyect
        link="https://rapidzip.xyz"
        image={{
          src: "/rapidzip.png",
          alt: "Rapidzip",
        }}
      >
        <span slot="title">Rapidzip - A beautiful and fast shortener url</span>
        <span slot="description">
          Created with <span class="font-semibold text-sky-400">Next.js</span>
          and hosted on
          <span class="font-semibold text-sky-400">Vercel</span>, It`s a url
          shortener with fast performance.
        </span>
        <div class="flex gap-x-3 mt-4" slot="tags">
          <span
            class="flex items-center w-fit gap-x-2 px-3 py-1 bg-black/30 border-[1px] border-white/10 text-sm shadow-xl rounded-full text-gray-300 transition duration-300"
          >
            <NextjsIcon class="w-4 h-4" />
            Next.js
          </span>
          <span
            class="flex items-center w-fit gap-x-2 px-3 py-1 bg-sky-500/30 border-[1px] border-sky-300/20 text-sm shadow-xl rounded-full text-gray-300 transition duration-300"
          >
            <TailwindIcon class="w-4 h-4" />
            Tailwind CSS
          </span>
        </div>
      </Proyect>
    </section>
  </main>
</Layout>
